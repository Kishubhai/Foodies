        android:layout_height="wrap_content"
        android:text="▪ Foddies is not liable for any adverse reactions or consequences resulting from the use of the provided recipes.\n"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_light"
        android:layout_marginStart="12dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="▪ Users agree not to engage in any activity that disrupts or interferes with the proper functioning of the App.\n"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_light"
        android:layout_marginStart="12dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="▪ Users shall not upload, post, or transmit any content that is unlawful, defamatory, or infringes on the rights of others.\n"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_light"
        android:layout_marginStart="12dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="▪ The App and its content are protected by intellectual property laws.\n"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_light"
        android:layout_marginStart="12dp"/>

    <TextView
