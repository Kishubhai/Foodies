        android:layout_height="wrap_content"
        android:text="▪ Users may not reproduce, distribute, or modify any part of the App without explicit permission.\n"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_light"
        android:layout_marginStart="12dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="▪ The App may contain links to third-party websites or services.\n"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_light"
        android:layout_marginStart="12dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="▪ Foodies is not responsible for the content or privacy practices of external sites.\n"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_light"
        android:layout_marginStart="12dp"/>

</LinearLayout>
</ScrollView>